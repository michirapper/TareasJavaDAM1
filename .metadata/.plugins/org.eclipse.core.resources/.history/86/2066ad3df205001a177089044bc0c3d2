import java.util.Scanner;

public class MediaWhile {
public static void main(String[] args) {
	Scanner in = new Scanner(System.in);
	int value;
	int contador = 0;
	int suma = 0;
	do {
		System.out.println("Introduzca valores (0 para terminar)");
		value = in.nextInt();
		suma +=value;
	}while(value !=0);
	System.out.printf("La media es %f", 0.0);
}
}
